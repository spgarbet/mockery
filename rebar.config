{erl_opts, [{parse_transform, lager_transform}]}.
{deps, [
         {lager, {git, "git://github.com/basho/lager.git", {tag, "2.1.0"}}}
        ,{cowboy, {git, "git://github.com/ninenines/cowboy.git", {tag, "2.0.0-pre.1"}}}
        ,{jiffy, {git, "git://github.com/davisp/jiffy.git", {tag, "0.13.3"}}}
]}.

{relx, [
         {release, {mockery_release, "0.0.1"}, [mockery]}
        ,{vm_args, "config/vm.args"}
        ,{dev_mode, true}
        %,{include_erts, false}
        ,{extended_start_script, true}
]}.

{lager, [
          {handlers, [
            {lager_console_backend, info}
            ,{lager_file_backend, [{file, "error.log"}, {level, error}]}
          ]}
]}.
